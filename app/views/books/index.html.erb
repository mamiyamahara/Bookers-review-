<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		    <tr>
			    <td><%= book.title %></td>
			    <td><%= book.body %></td>
			    <td><%= link_to "Show", book_path(book.id), style: "color: #444444;" %></td>
			    <td><%= link_to "Edit", edit_book_path(book.id), style: "color: #444444;" %></td>
			    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", style: "color: #444444;" %></td>
		    </tr>
		<% end %>
	</tbody>
</table>

<h2 class = "padding:10px">New book</h2>

<%= form_for(@book) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
    <h5>Title</h5>
      <%= f.text_field :title %>
    <h5>Body</h5>
      <%= f.text_area :body %>
    <br>
      <%= f.submit " Create Book " %>
<% end %>
